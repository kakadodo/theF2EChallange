block css
	//- link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.13/css/all.css', integrity='sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp', crossorigin='anonymous')
	link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
	link(rel="stylesheet", href="./css/skill-tree.css")
block content
	#app.container(v-cloak)
		section.skill.skill_summary
			h1.summary_title FRONT-END<br>SKILL TREE
			h3.summary_level_desc CURRENT RANK
			h2.summary_level FRONT-END
			h2.summary_level {{ranks[currentRank].name}}
			img.summary_img(:src='ranks[currentRank].picUrl')
			.summary_message
				svg.border(viewBox="0 0 300 180")
					path(d="M142.8,5.2l-22.5,8.3-4.7,1.7,4.6,2,12.3,5.3-17.1,9.9L109,36.2H297.2V178H2.8V36.2H60.4l.4-.2,33-13.6,3-1.3L94.4,19l-5.9-5.2,54.3-8.6M162.5,0,83.9,12.5l9.1,8L60,34.2H.8V180H299.2V34.2H116.4l20.5-12-16-6.8L162.5,0Z")
				.text(v-html='ranks[currentRank].sentence')
		section.skill.skill_progress
			.progress
				.progress_icon
					img(src="./img/week9/img-planet-basics@2x.png", alt="")
				.progress_lists
					ul.lists_block
						li.list(v-for='(branch,i) in skillDatas[0].branch',
										:class='{active: branch.active, completed: branch.recommendComplete}')
							a(href="#", v-on:click.prevent='focusList(branch)')
								i.material-icons {{branch.iconName}}
							small.recommend
								i.material-icons settings
								span {{currentComplete(branch.recommend)}}/{{branch.recommend!==null? branch.recommend.length:"0"}}
							small.optional
								i.material-icons filter_tilt_shift
								span {{currentComplete(branch.optional)}}/{{branch.optional!==null? branch.optional.length:"0"}}
			.progress(:class='{disabled: !skillDatas[0].levelComplete}')
				.progress_icon
					img(src="./img/week9/img-planet-css@2x.png", alt="")
				.progress_lists
					ul.lists_block
						li.list(v-for='num in 3',
										:class='{active: skillDatas[1].branch[num-1].active, completed: skillDatas[1].branch[num-1].recommendComplete}')
							a(href="#", v-on:click.prevent='focusList(skillDatas[1].branch[num-1])')
								i.material-icons {{skillDatas[1].branch[num-1].iconName}}
							small.recommend
								i.material-icons settings
								span {{currentComplete(skillDatas[1].branch[num-1].recommend)}}/{{skillDatas[1].branch[num-1].recommend!==null? skillDatas[1].branch[num-1].recommend.length:0}}
							small.optional
								i.material-icons filter_tilt_shift
								span {{currentComplete(skillDatas[1].branch[num-1].optional)}}/{{skillDatas[1].branch[num-1].optional!==null? skillDatas[1].branch[num-1].optional.length:"0"}}
					ul.lists_block
						li.list(v-for='num in 2',
										:class='{active: skillDatas[1].branch[num+2].active, completed: skillDatas[1].branch[num+2].recommendComplete}')
							a(href="#", v-on:click.prevent='focusList(skillDatas[1].branch[num+2])')
								i.material-icons {{skillDatas[1].branch[num+2].iconName}}
							small.recommend
								i.material-icons settings
								span {{currentComplete(skillDatas[1].branch[num+2].recommend)}}/{{skillDatas[1].branch[num+2].recommend!==null? skillDatas[1].branch[num+2].recommend.length:0}}
							small.optional
								i.material-icons filter_tilt_shift
								span {{currentComplete(skillDatas[1].branch[num+2].optional)}}/{{skillDatas[1].branch[num+2].optional!==null? skillDatas[1].branch[num+2].optional.length:0}}
			.progress(:class='{disabled: !skillDatas[1].levelComplete}')
				.progress_icon
					img(src="./img/week9/img-planet-js@2x.png", alt="")
				.progress_lists
					ul.lists_block
						li.list(v-for='num in 2',
										:class='{active: skillDatas[2].branch[num-1].active, completed: skillDatas[2].branch[num-1].recommendComplete}')
							a(href="#", v-on:click.prevent='focusList(skillDatas[2].branch[num-1])')
								i.material-icons {{skillDatas[2].branch[num-1].iconName}}
							small.recommend
								i.material-icons settings
								span {{currentComplete(skillDatas[2].branch[num-1].recommend)}}/{{skillDatas[2].branch[num-1].recommend!==null? skillDatas[2].branch[num-1].recommend.length:0}}
							small.optional
								i.material-icons filter_tilt_shift
								span {{currentComplete(skillDatas[2].branch[num-1].optional)}}/{{skillDatas[2].branch[num-1].optional!==null? skillDatas[2].branch[num-1].optional.length:0}}
					ul.lists_block
						li.list(v-for='num in 3',
										:class='{active: skillDatas[2].branch[num+1].active, completed: skillDatas[2].branch[num+1].recommendComplete}')
							a(href="#", v-on:click.prevent='focusList(skillDatas[2].branch[num+1])')
								i.material-icons {{skillDatas[2].branch[num+1].iconName}}
							small.recommend
								i.material-icons settings
								span {{currentComplete(skillDatas[2].branch[num+1].recommend)}}/{{skillDatas[2].branch[num+1].recommend!==null? skillDatas[2].branch[num+1].recommend.length:0}}
							small.optional
								i.material-icons filter_tilt_shift
								span {{currentComplete(skillDatas[2].branch[num+1].optional)}}/{{skillDatas[2].branch[num+1].optional!==null? skillDatas[2].branch[num+1].optional.length:0}}
			.progress(:class='{disabled: !skillDatas[2].levelComplete}')
				.progress_icon
					img(src="./img/week9/img-planet-managers@2x.png", alt="")
				.progress_lists
					ul.lists_block
						li.list(v-for='(branch,i) in skillDatas[3].branch',
										:class='{active: branch.active, completed: branch.recommendComplete}')
							a(href="#", v-on:click.prevent='focusList(branch)')
								i.material-icons {{branch.iconName}}
							small.recommend
								i.material-icons settings
								span {{currentComplete(branch.recommend)}}/{{branch.recommend!==null? branch.recommend.length:"0"}}
							small.optional
								i.material-icons filter_tilt_shift
								span {{currentComplete(branch.optional)}}/{{branch.optional!==null? branch.optional.length:"0"}}
		section.skill.skill_detail
			.detail_top
				.logo
					i.material-icons {{currentBranch.iconName}}
				.name(v-html='currentBranch.name.replace(" ", "<br>")')
			.detail_bottom
				.unit.recommend(v-if='currentBranch.recommend!==null')
					.top
						.logo
							i.material-icons settings
						.name RECOMMENDED
					.bottom
						li(v-for='list in currentBranch.recommend',
							:class='{completed:list.complete}',
							v-on:click='toggleListComplete(list)') {{list.name}}
				.unit.optional(v-if='currentBranch.optional!==null')
					.top
						.logo
							i.material-icons filter_tilt_shift
						.name OPTIONAL
					.bottom
						li(v-for='list in currentBranch.optional',
							:class='{completed:list.complete}',
							v-on:click='toggleListComplete(list)') {{list.name}}
	
block script
	script(src="./js/vendors.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.16/vue.js")
	script(src="./js/skill-tree.js")
